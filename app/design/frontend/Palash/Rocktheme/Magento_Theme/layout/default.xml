<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/palash-logo.jpg</argument>
                <argument name="logo_img_width" xsi:type="number">150</argument>
                <argument name="logo_img_height" xsi:type="number">150</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="sidebar.additional">
            <block class="Magento\Cms\Block\Block" name="rock-promo-block">
                <arguments>
                    <argument name="block_id" xsi:type="string">rock-promo-block</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>